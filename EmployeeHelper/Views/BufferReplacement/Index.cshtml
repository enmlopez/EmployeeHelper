@model IEnumerable<EmployeeHelper.Models.BufferModels.BufferListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveBufferResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveBufferResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BufferId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsComplete)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueOnDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BufferId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplete)
            </td>
            <td>
                @{ string formatDate = item.DueOnDate.ToLongDateString();}
                @Html.DisplayFor(modelItem => formatDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BufferId }) |
                @Html.ActionLink("Details", "Details", new { id = item.BufferId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BufferId }) |
                @Html.ActionLink("Completed By:", "CompletedBy", new { id = item.BufferId })
            </td>
        </tr>
    }

</table>
