@model EmployeeHelper.Models.EmployeeModels.EmployeeDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Employee Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HiringDate)
        </dt>

        <dd>
            @{ string formatDate = Model.HiringDate.ToLongDateString();}
            @Html.DisplayFor(model => formatDate)
        </dd>

    </dl>
</div>
<h4>OverTime</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OTList[0].OTId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OTList[0].OTDay)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OTList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OTId)
            </td>
            <td>
                @{ string formatDate2 = item.OTDay.ToLongDateString();}
                @Html.DisplayFor(modelItem => formatDate2)
            </td>
            <td>
               | @Html.ActionLink("Details", "Details","OverTime", new { id = item.OTId }, "") |
            </td>
        </tr>
    }

</table>
<h4>Bulk/Tech Samples</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BTList[0].BTId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BTList[0].IsComplete)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BTList[0].DueOnDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.BTList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BTId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplete)
            </td>
            <td>
                @{ string formatDate3 = item.DueOnDate.ToLongDateString();}
                @Html.DisplayFor(modelItem => formatDate3)
            </td>
            <td>
               | @Html.ActionLink("Details", "Details", "BulkTech", new { id = item.BTId }, "") |
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Update", "Update", new { id = Model.EmployeeId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
