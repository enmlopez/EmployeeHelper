@model IEnumerable<EmployeeHelper.Models.OTModels.OverTimeListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveOTResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveOTResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OTId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OTDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAvailable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OTId)
            </td>
            <td>
                @{ string formatDate = item.OTDay.ToLongDateString();}
                @Html.DisplayFor(modelItem => formatDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OTId }) |
                @Html.ActionLink("Details", "Details", new { id = item.OTId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OTId })
            </td>
        </tr>
    }

</table>
